<div class="container-fluid">
  <br>
  <div class="row">
<h1 class="text-warning col-12 display-3" id="main-title">Eat-Da-Burger!</h1>
</div>
<br>

<div class="row">

<div class="card col-md-3 col-5 border-info mb-4 px-0 mx-2 bg-transparent">
  <div class="card-header border-info mb-0 text-light">
    <h3>Burgers to Eat</h3>
  </div>
  <div class="card-body py-0 my-0 bg-transparent">
    <ul class="text-primary">
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burger-block }}
    {{/unless}}
  {{/each}}
</ul>
  </div>
</div>


<div class="card col-md-3 col-5 border-info mb-4 px-0 mx-2 bg-transparent">
  <div class="card-header border-info mb-0 text-light">
    <h3>Burgers Already Eaten</h3>
  </div>
  <div class="card-body bg-transparent">
    <ul class="text-primary">
  {{#each burgers}}
    {{#if devoured}}
      <li>
      {{burger_name}}
      </li>
    {{/if}}
  {{/each}}
</ul>
  </div>
</div>

</div>

<h3 class="text-white">Add a New Burger</h3>
<form class="create-form">

  <div class="form-group">
    <label for="ca" class="text-white">New Burger Name:</label>
    <input type="text" id="ca" name="name" class="col-3">
    <button type="submit" class="btn btn-outline-success">Add Burger</button>
  </div>
</form>
</div>
